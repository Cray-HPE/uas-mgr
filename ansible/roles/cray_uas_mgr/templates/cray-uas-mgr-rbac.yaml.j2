---
kind: Role
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: cray-uas-mgr
  namespace: default
rules:
  - apiGroups: ["extensions"]
    resources: ["deployments"]
    verbs: ["get", "list", "create", "delete", "patch"]
  - apiGroups: [""]
    resources: ["services"]
    verbs: ["get", "list", "create", "delete"]
  - apiGroups: [""]
    resources: ["pods"]
    verbs: ["get", "list", "create", "delete"]
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: cray-uas-mgr
  namespace: default
subjects:
  - kind: ServiceAccount
    name: cray-uas-mgr
    namespace: services
roleRef:
  kind: Role
  name: cray-uas-mgr
  apiGroup: rbac.authorization.k8s.io
