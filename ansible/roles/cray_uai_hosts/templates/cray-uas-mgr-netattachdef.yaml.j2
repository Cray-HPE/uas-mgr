# Based on https://github.com/intel/multus-cni/blob/master/examples/macvlan-conf.yml
# Macvlan definition for UAS on the node management network
apiVersion: "k8s.cni.cncf.io/v1"
kind: NetworkAttachmentDefinition
metadata:
  name: macvlan-uas-nmn-conf
spec:
  config: '{
      "cniVersion": "0.3.0",
      "type": "macvlan",
      "master": "mac0",
      "mode": "bridge",
      "ipam": {
        "type": "host-local",
        "subnet": "{{ uai_macvlan_network }}",
        "rangeStart": "{{ uai_macvlan_dhcp_start }}",
        "rangeEnd": "{{ uai_macvlan_dhcp_end }}"
{%- if uai_macvlan_mtn_network is defined -%}
         ,
         "routes": [
                {
                    "dst": "{{ uai_macvlan_mtn_network }}",
                    "gw": "{{ uai_macvlan_mtn_gateway }}"
                } 
        ]
{%- endif -%}
      }
    }'
